<?xml version="1.0" encoding="UTF-8"?>

  <!DOCTYPE   hibernate-mapping   
          PUBLIC   "-//Hibernate/Hibernate   Mapping   DTD//EN"   
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="hibernate.po.Detailed_user" table="detailed_user">
	
		<id name="userid" type="int">
			<column name="userid" sql-type="int" not-null="true" />
		</id>
		<property name="ID_number" type="string">
			<column name="ID_number" sql-type="char(9)" not-null="true" />
		</property>
		<property name="departement" type="string">
			<column name="departement" sql-type="varchar(20)" not-null="false" />
		</property>
		<property name="sex" type="string">
			<column name="sex" sql-type="char(1)" not-null="false" />
		</property>
		<property name="identify" type="string">
			<column name="identify" sql-type="char(18)" not-null="false" />
		</property>
		<property name="company" type="string">
			<column name="company" sql-type="varchar(50)" not-null="false" />
		</property>
		<property name="degree" type="string">
			<column name="degree" sql-type="varchar(20)" not-null="false" />
		</property>
		<property name="birth" type="date">
			<column name="birth" sql-type="date" not-null="false" />
		</property>
		<property name="borrow_max" type="int">
			<column name="borrow_max" sql-type="int" not-null="true" />
		</property>
		<property name="appionent_max" type="int">
			<column name="appionent_max" sql-type="int" not-null="true" />
		</property>
		<property name="entrust_max" type="int">
			<column name="entrust_max" sql-type="int" not-null="true" />
		</property>
		<property name="phone" type="string">
			<column name="phone" sql-type="varchar(20)" not-null="false" />
		</property>
		<property name="postcode" type="string">
			<column name="postcode" sql-type="char(6)" not-null="false" />
		</property>
		<property name="cash_pledge" type="float">
			<column name="cash_pledge" sql-type="float" not-null="false" />
		</property>
		<property name="position" type="string">
			<column name="position" sql-type="varchar(20)" not-null="false" />
		</property>
		<property name="borrow_account" type="int">
			<column name="borrow_account" sql-type="int" not-null="false" />
		</property>
		<property name="break_rules_account" type="int">
			<column name="break_rules_account" sql-type="int" not-null="false" />
		</property>
		<property name="handing_charge" type="float">
			<column name="handing_charge" sql-type="float" not-null="false" />
		</property>
		<property name="borrow_grade" type="int">
			<column name="borrow_grade" sql-type="int" not-null="false" />
		</property>
		<property name="address" type="string">
			<column name="address" sql-type="varchar(50)" not-null="false" />
		</property>
	</class>

</hibernate-mapping>  
